{
  "name": "crud-api",
  "version": "1.0.0",
  "description": "simple CRUD API using in-memory database underneath",
  "main": "index.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start:dev": "nodemon src/index.ts",
    "start:multi": "nodemon src/cluster/cluster.ts",
    "start:prod": "tsc && node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Greys73/nodejs.crud-api.git"
  },
